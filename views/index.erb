<h1> Welcome to Chitter </h1>

<% if @signup %>
<h2> Your account has been successfully created, welcome to Chitter <%= @user.username %>! </h2>
<% end %>

<form action='/peep/new' method='post'>
  <label for='peep_text'>
    Create a new peep:
    <input type='text' name='peep_text'>
  </label>
  <input type='submit' value='Create peep'>
</form>

<% if @user %>
<div>
  <form action='/user/logout' method='get'>
    <input type='submit' value='Log out'>
  </form>
</div>
<% else %>
<div>
  <form action='/user/login' method='get'>
    <input type='submit' value='Log in'>
  </form>
</div>
<div>
  <form action='/user/new' method='get'>
    <input type='submit' value='Sign up'>
  </form>
</div>
<% end %>

<ul>
  <% @peeps.each do |peep| %> 
    <li> <%= peep.text %> </li>
    <li> <%= (User.find(id: peep.author)).username %> <%= peep.time.strftime('%H:%M %P Â· %d %b %Y') %> </li>
  <% end %>
</ul>

